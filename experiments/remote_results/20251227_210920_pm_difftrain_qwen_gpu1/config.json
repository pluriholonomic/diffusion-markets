{
  "benchmark": "pm_difftrain",
  "bundling": {
    "enabled": false
  },
  "dataset_path": "/root/polymarket_data/derived/gamma_yesno_ready.parquet",
  "diffusion": {
    "T": 100,
    "agg": "mean",
    "batch_size": 256,
    "beta_end": 0.02,
    "beta_start": 0.0001,
    "depth": 6,
    "device": "cuda",
    "eta": 0.0,
    "hidden_dim": 512,
    "label_eps": 0.001,
    "lr": 0.0001,
    "mc": 32,
    "sample_steps": 50,
    "time_dim": 128,
    "train_steps": 8000
  },
  "embed": {
    "batch_size": 4,
    "device": "cuda",
    "device_map": "auto",
    "dtype": "bfloat16",
    "max_length": 512,
    "model": "Qwen/Qwen3-14B",
    "normalize": true,
    "trust_remote_code": true
  },
  "eval": {
    "B": 1.0,
    "bins": 20,
    "group_cols": null,
    "pred_col": "pred_prob",
    "trading_mode": "sign",
    "transaction_cost": 0.0
  },
  "max_rows": 3000,
  "split": {
    "seed": 0,
    "train_frac": 0.8
  },
  "text_cols": [
    "question",
    "description"
  ]
}
